<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
    <!-- Stdout -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%d{MM-dd HH:mm}] [%level] [%thread] [%logger{16}:%line]) %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>log/perri.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>log/perri-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>100MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{MM-dd HH:mm}] [%level] [%thread] [%logger{16}:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Telegram -->
    <!--
    <appender name="TELEGRAM-ERROR" class="com.github.paolodenti.telegram.logback.TelegramAppender">
        <botToken></botToken>
        <chatId></chatId>
        <minInterval>10</minInterval>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{MM-dd HH:mm}] [%level] [%thread] [%logger{16}:%line] %msg%n</pattern>
        </layout>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>
    -->

    <!-- Mode -->
    <logger name="org.code13k.perri" level="TRACE"/>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>



